@page
@model LLPA_Website.Pages.Products.CreateOrderModel

@{
    ViewData["Title"] = "Create Your Order";
}

<h3>@ViewData["Title"]</h3>
<hr />
<div class="row">
    @if (ViewBag.Message != null)
    {
        <div class="col">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">Error</h4>
                <p>@ViewBag.Message</p>
            </div>
        </div>
    }
    else
    {
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="display:none;">
                    <label asp-for="pizza.Price" class="control-label"></label>
                    <input asp-for="pizza.Price" class="form-control" />
                    <span asp-validation-for="pizza.Price" class="text-danger"></span>
                </div>
                <div class="form-group" style="display:none;">
                    <label asp-for="pizza.Id" class="control-label"></label>
                    <input asp-for="pizza.Id" class="form-control" />
                    <span asp-validation-for="pizza.Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h4 class="card-title">@Model.pizza.Name </h4>
                </div>
                <div class="form-group">
                    <img class="card-img-top" src="@Model.pizza.Photo" alt="Card image cap" width="286px" height="150px">
                </div>
                <div class="form-group">
                    <p class="card-text">About: @Model.pizza.Description</p>
                    <h5 class="card-title">Price: @Model.pizza.Price $</h5>
                </div>
                <div class="form-group">
                    <label asp-for="pizza.Quantity" class="control-label"></label>
                    <input asp-for="pizza.Quantity" class="form-control" />
                    <span asp-validation-for="pizza.Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Total Bill: </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Place Order" class="btn btn-primary" />
                </div>
            </form>
        </div>
    }
</div>
<hr />
