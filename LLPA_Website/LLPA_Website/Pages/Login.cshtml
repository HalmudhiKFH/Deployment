@page "/Login"
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="pt-5">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" id="login-name" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" id="login-pass" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.RememberMe" id="btnLogin" />
                    <label asp-for="Input.RememberMe"></label>
                    <span asp-validation-for="Input.RememberMe" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" id="btnLogon">Log in</button>
                </div>
            </form>
            <label>OR</label>
            <div class="form-group">
                <a class="btn btn-sm btn-success float-left" asp-page="./Register">Create New Account</a>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
